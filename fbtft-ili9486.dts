/dts-v1/;
/plugin/;

/ {
	compatible = "allwinner,sun8i-h3";
	
	fragment@0 {
		target = <&pio>;
		__overlay__ {
			spi1_cs0: spi1_cs0 {
				pins = "PA13";
				function = "gpio_out";
				output-high;
			};
			
			spi1_cs1: spi1_cs1 {
				pins = "PA17";
				function = "gpio_out";
				output-high;
			};
			
			opiz_display_pins: opiz_display_pins {
				pins = "PG9", "PA1";
				function = "gpio_out";
			};
			
			ads7846_pins: ads7846_pins {
				pins = "PA0";
				function = "irq";
			};
		};
	};
	
	fragment@1 {
		target = <&spi1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			
			pinctrl-names = "default", "default";
			cs-gpios= <&pio 0 13 0>, <&pio 0 17 1>;
			
			opizdisplay: opiz-display@0 {
				pinctrl-1 = <&spi1_cs0>;
				reg = <0>; /* Chip Select 0 */
				compatible = "ilitek,ili9486";
				spi-max-frequency = <125000000>;  /* 125MHZ */
				status = "okay";
				pinctrl-names = "default";
				pinctrl-0 = <&opiz_display_pins>;
				rotate = <90>;
				bgr = <0>;
				fps = <33>;
				buswidth = <8>;
				dc-gpios = <&pio 6 9 0>;      /* PG9 > */
				reset-gpios = <&pio 0 1 0>;   /* PA1 > */
				debug=<4>;
			};
			
			ads7846: ads7846@1 {
				reg = <1>; /* Chip Select 1 */
				compatible = "ti,ads7846";
				spi-max-frequency = <2000000>; /* 2MHZ */
				status = "okay";
				pinctrl-names = "default";
				pinctrl-3 = <&ads7846_pins>;
				interrupt-parent = <&pio>;
				interrupts = <0 0 0>; /* PA0 IRQ_TYPE_EDGE_FALLING */
				pendown-gpio = <&pio 0 0 0>; /* PA0 */
				/* driver defaults, optional */
				ti,x-min = /bits/ 16 <0>;
				ti,y-min = /bits/ 16 <0>;
				ti,x-max = /bits/ 16 <0x0FFF>;
				ti,y-max = /bits/ 16 <0x0FFF>;
				ti,pressure-min = /bits/ 16 <0>;
				ti,pressure-max = /bits/ 16 <0xFFFF>;
				ti,x-plate-ohms = /bits/ 16 <400>;
			};
		};
	};
};
